---
import type { Novel } from '../data/novels';

interface Props {
  novel: Novel;
  showDescription?: boolean;
  showChapters?: boolean;
}

const { novel, showDescription = false, showChapters = false } = Astro.props;

function formatViews(views: number): string {
  if (views >= 1000000) {
    return (views / 1000000).toFixed(1) + 'M';
  }
  if (views >= 1000) {
    return (views / 1000).toFixed(1) + 'K';
  }
  return views.toString();
}
---

<a href={`/novel/${novel.id}`} class="novel-card">
  <div class="card-cover">
    <img
      src={novel.cover}
      alt={novel.title}
      width={300}
      height={400}
      loading="lazy"
      decoding="async"
    />
    <div class="card-badges">
      {novel.status === 'Completed' && (
        <span class="badge badge-success">Completed</span>
      )}
    </div>
  </div>
  <div class="card-content">
    <h3 class="card-title">{novel.title}</h3>
    <p class="card-author">{novel.author}</p>
    
    {showDescription && (
      <p class="card-description">{novel.description}</p>
    )}
    
    <div class="card-meta">
      <div class="card-rating">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
        </svg>
        <span>{novel.rating}</span>
      </div>
      <div class="card-views">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
          <circle cx="12" cy="12" r="3"></circle>
        </svg>
        <span>{formatViews(novel.views)}</span>
      </div>
      {showChapters && (
        <div class="card-chapters">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 19.5C4 18.837 4.26339 18.2011 4.73223 17.7322C5.20107 17.2634 5.83696 17 6.5 17H20"></path>
            <path d="M6.5 2H20V22H6.5C5.83696 22 5.20107 21.7366 4.73223 21.2678C4.26339 20.7989 4 20.163 4 19.5V4.5C4 3.83696 4.26339 3.20107 4.73223 2.73223C5.20107 2.26339 5.83696 2 6.5 2Z"></path>
          </svg>
          <span>{novel.chapters.length} Ch</span>
        </div>
      )}
    </div>
    
    <div class="card-genres">
      {novel.genres.slice(0, 2).map(genre => (
        <span class="genre-tag">{genre}</span>
      ))}
    </div>
  </div>
</a>

<style>
  .novel-card {
    display: flex;
    flex-direction: column;
    background-color: var(--card-bg);
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
  }

  .novel-card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-4px);
  }

  .card-cover {
    position: relative;
    aspect-ratio: 3/4;
    overflow: hidden;
  }

  .card-cover img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .novel-card:hover .card-cover img {
    transform: scale(1.05);
  }

  .card-badges {
    position: absolute;
    top: 0.5rem;
    left: 0.5rem;
    display: flex;
    gap: 0.25rem;
  }

  .card-content {
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
  }

  .card-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-author {
    font-size: 0.75rem;
    color: var(--text-muted);
  }

  .card-description {
    font-size: 0.75rem;
    color: var(--text-secondary);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-top: 0.25rem;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-top: 0.5rem;
    padding-top: 0.5rem;
    border-top: 1px solid var(--border-color);
  }

  .card-rating,
  .card-views,
  .card-chapters {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.75rem;
    color: var(--text-secondary);
  }

  .card-rating {
    color: #f59e0b;
  }

  .card-genres {
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
    margin-top: 0.5rem;
  }

  .genre-tag {
    font-size: 0.625rem;
    font-weight: 500;
    padding: 0.125rem 0.5rem;
    background-color: var(--bg-tertiary);
    color: var(--text-secondary);
    border-radius: 9999px;
  }
</style>
