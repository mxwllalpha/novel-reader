# Site Configuration
# Copy this file to .env and update with your values

# Your site URL (required for sitemap and canonical URLs)
PUBLIC_SITE_URL=https://novel-reader.pages.dev

# Cloudflare Web Analytics (optional)
# Get your token at: https://dash.cloudflare.com/signature
PUBLIC_CF_ANALYTICS_TOKEN=

# Site Metadata
PUBLIC_SITE_NAME=NovelReader
PUBLIC_SITE_DESCRIPTION=Read your favorite novels online for free
PUBLIC_DEFAULT_LOCALE=id_ID

# Feature Flags (optional)
PUBLIC_ENABLE_SEARCH=true
PUBLIC_ENABLE_BOOKMARKS=false
PUBLIC_ENABLE_COMMENTS=false
